extends ../layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 #{title}

                // Submit form
                form(method='POST' action ='../plan/edit')
                    div.form-group
                        label(for='name') Name:
                        input#name.form-control(type='text',placeholder='Name of Plan')
                    div.form-group
                        label(for='overview') Overview:
                        input#overview.form-control(type='text',placeholder='Overview of plan')
                    button.btn.btn-primary(type='submit') Edit